-   
    var menuItems = [
        {title:"Home", link: "/"},
        {title:"About", link: "about"},
        {title:"Trips", link: "products"},
        {title:"Blog", link: "blog"},
        {title:"Contacts", link: "footer"},
        ]
header.header
    .container
        .row.align-items-center 
            .col-3
                .logo 
                    img.logo__pic(src="./img/logo.png", alt="Trips")                   
            .col-9.d-flex.justify-content-end
                button.navbar-toggler.d-block.d-lg-none(type="button" )
                    svg.navbar-toggler__icon(width="30" height="30")
                        use(xlink:href="./img/sprite.svg#menu") 
                nav.nav.flex-column.flex-lg-row.align-items-start.p-4.p-lg-0
                    button.navbar-close.d-flex.d-lg-none.align-self-end.bg-transparent.border-0(type="button" )
                        svg.navbar-close__icon(width="25" height="25")
                            use(xlink:href="./img/sprite.svg#close")
                    ul.nav__list.d-lg-flex.flex-wrap
                        each menuItem in menuItems
                            li.nav__item 
                                a.nav__link.py-2.px-4.px-lg-3.py-lg-0.d-block(href=`#${menuItem.link}`)= menuItem.title