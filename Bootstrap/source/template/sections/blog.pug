        {delay:"0.1s", title:"Lorem ipsum dolor sit amet", date1:"July 17, 2019", date2:"by", author: "Admin",img:"img_1", text:"Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolores eos soluta, dolore harum molestias consectetur."},
        {delay:"0.3s", title:"Lorem ipsum dolor sit amet", date1:"July 17, 2019", date2:"by", author: "Admin",img:"img_2", text:"Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolores eos soluta, dolore harum molestias consectetur."},
