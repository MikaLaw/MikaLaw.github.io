mixin discount-system-card(data)
	-
		data = init(data, {
			'block': 'discount-system-card',
			'img': './img/components/my-card/img-5.png',
			'amount': '15%',
			'purchase-title': 'Сумма покупок',
			'purchase': [
				{
					'label': 'за прошлый квартал:',
					'value': '31 900 ₽'
				},
				{
					'label': 'за текущий квартал:',
					'value': '1 900 ₽'
				},				
			],
			'table': {
				'head': ['Сумма покупки за прошлый/текущий квартал', 'Скидка'],
				'row': [
					{
						'label':'5 000 ₽',
						'value': '5%'
					},
					{
						'label':'10 000 ₽',
						'value': '6%'
					},		
					{
						'label':'15 000 ₽',
						'value': '7%'
					},
					{
						'label':'20 000 ₽',
						'value': '8%'
					},		
					{
						'label':'25 000 ₽',
						'value': '9%'
					},
					{
						'label':'30 000 ₽',
						'value': '10%'
					},		
					{
						'label':'35 000 ₽',
						'value': '11%'
					},
					{
						'label':'45 000 ₽',
						'value': '12%'
					},		
					{
						'label':'60 000 ₽',
						'value': '13%'
					},		
					{
						'label':'80 000 ₽',
						'value': '14%'
					},															
				]
			}
		})	

	+b&attributes(data.attributes(attributes))
		+e.head 
			+b.discount-system-purchase
				+e.head
					if data.title
						+e.title= data.title
					else if data.img 	
						+e.img-container
							+e.IMG.img(src= data.img alt="Название")
					+e.amount= data.amount
				+e.body 	
					+e.list-title= data['purchase-title']
					+e.UL.list
						each item in data.purchase
							+e.LI.item 
								+e.label= item.label 
								+e.value= item.value 
				
		+e.body
			+b.TABLE.discount-system-table
				each row in data.table.head 
					+e.TR.row 
						+e.TH.cell._head
							span= row
				each row in data.table.row
					+e.TR.row 
						+e.TD.cell._label= row.label
						+e.TD.cell._value= row.value
		+e.BUTTON.btn-more(data-js-discount-more) Подробнее
			
			
