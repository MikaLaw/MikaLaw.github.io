include ../base-components/favorites-btn 
include ../base-components/basket-btn
include ../base-components/input-counter

mixin product-row(data)
	-
		data = init(data, {
			'block': 'product-row',
			'img':'./img/components/product-card/img-1',
			'labels': [	
				{
					'text': 'Sale',
				},
			],
			'title': 'MATRIX',
			'text': 'Exquisite Oil Масло питательное для волос 92мл',
			'cost': '6 750 ₽',
			'stock': '2 125,00 ₽',

		})
	+b&attributes(data.attributes(attributes))
		+e.wrap
			+e.img-container
				+e.A.wrap-img(href="!#")
					+picture({
						src: data.img,
						webp: true,
						alt: data.title,
					})
				if data.labels
					+e.labels
						each label in data.labels
							.label__wrap
								if 'img' in label
									+b.label_img._small(data-tooltip=label.tooltip)
										img(src=label.img alt="товар")
								else
									if 'text' in label
										+b.label_small(class= label.class)= label.text
									if label.stock
										.label__stock= label.stock
			+e.content-container
				+e.text-container
					+e.A.title(href="!#")= data.title
					+e.text= data.text
					+e.art Арт.:
						span CAT00016611				
				if data.cost
					+e.cost-wrap 
						+e.cost= data.cost
						if data.stock 
							+e.stock= data.stock
			if data.availability
				+favorites-btn()
				+e.control-container 
					+e.BUTTON.btn В лист ожидания
			else if data['additional-info']
				+e.control-container
					+e.additional-info= data['additional-info']	
			else 
				+favorites-btn()
				+e.control-container 
					+input-counter({
						'value': 0,
					}).js-row-input-counter
					+e.basket-btn.js-row-backet
						+basket-btn()
						span в корзину


				
