doctype html
include ../bemto/bemto.pug
include ../includes/data
include ../components/head-dashboard
include ../components/mobile-menu
include ../components/footer
include ../components/menu-nav
include ../components/breadcrumbs
include ../components/menu-catalog  
include ../components/basket
include ../components/menu-filter
include ../base-components/form-field
include ../base-components/picture

html(lang='ru')
	head
		block meta
			include ../includes/meta

		block links
			include ../includes/headlinks

		block title

	body
		.awPageWrapper
			header.header.header_main#header
				+head-dashboard({		
					logo: {
						link: false
					}
				})
			block breadcrumbs

			main.page
				.page__main 
					block content

				block extraContent
			+footer({		
					logo: {
						link: false
					}
			})
			+menu-nav()      
			+menu-catalog
			+mobile-menu
			+menu-filter
			+basket({
				'is-product': false
			})
		include ../components/notifications
		include ../includes/modal-forms

		block bottomlinks
			include ../includes/footerlinks
